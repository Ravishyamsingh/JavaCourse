# Server Configuration
PORT=5000
NODE_ENV=production
LOG_LEVEL=info
BACKEND_URL=https://api.your-domain.com
ALLOWED_ORIGINS=https://your-frontend-domain.com
COOKIE_DOMAIN=your-frontend-domain.com

# Database Configuration
MONGO_URL=mongodb://localhost:27017/javacourse
MONGODB_URI=mongodb://localhost:27017/javacourse

# Frontend Configuration
FRONTEND_URL=http://localhost:5173

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=your-jwt-access-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
SALT_ROUNDS=12

# Legacy JWT (for backward compatibility)
JWT_SECRET=your-jwt-secret-here

# Google OAuth 2.0 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://api.your-domain.com/api/auth/google/callback

# Security Configuration
SESSION_SECRET=your-session-secret-change-in-production
CSRF_SECRET=your-csrf-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Legacy Configuration (for backward compatibility)
SALT=12
